<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="NamuWikiViewer.Windows.Controls.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:NamuWikiViewer.Windows.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:NamuWikiViewer.Windows"
    MinWidth="500"
    CloseButtonText="닫기"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel
        MinWidth="500"
        HorizontalAlignment="Stretch"
        Spacing="8">
        <dev:SettingsCard Description="이 옵션을 활성화 하면 방문하는 페이지를 기록합니다. 비활성화 시 저장됐던 모든 방문기록이 삭제됩니다." Header="방문 기록 사용">
            <ToggleSwitch IsOn="{x:Bind root:App.GlobalPreferenceViewModel.UsePageHistory, Mode=TwoWay}" />
        </dev:SettingsCard>

        <dev:SettingsCard Description="이 옵션을 활성화 하면 스크롤바를 보여주지 않습니다." Header="스크롤바 숨기기">
            <ToggleSwitch IsOn="{x:Bind root:App.GlobalPreferenceViewModel.HideWebViewScrollBar, Mode=TwoWay}" />
        </dev:SettingsCard>

        <dev:SettingsCard Description="이 옵션을 활성화 하면 광고를 보여주지 않습니다." Header="광고 숨기기">
            <ToggleSwitch IsOn="{x:Bind root:App.GlobalPreferenceViewModel.BlockAds, Mode=TwoWay}" />
        </dev:SettingsCard>
    </StackPanel>
</ContentDialog>
