<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="NamuWikiViewer.Windows.Pages.BrowserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NamuWikiViewer.Windows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:NamuWikiViewer.Windows"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Rectangle Grid.RowSpan="2" Fill="{ThemeResource ThemeColor}" />

        <Frame x:Name="WebViewContainer" Grid.Row="1" />

        <Grid
            x:Name="PendingPageNameGrid"
            Grid.Row="1"
            Padding="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"
            BorderBrush="#808080"
            BorderThickness="1,0,1,1"
            ColumnSpacing="24"
            CornerRadius="0,0,8,8"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="PendingPageNameTextBlock"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="다음에 볼 페이지" />

            <HyperlinkButton
                Grid.Column="1"
                Padding="2"
                Click="OnAddPendingPageButtonClicked"
                Content="다음에 보기"
                FontWeight="ExtraBold"
                Foreground="{StaticResource SystemAccentColor}" />
        </Grid>
    </Grid>
</Page>