<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="NamuWikiViewer.Windows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NamuWikiViewer.Windows">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--  Other merged dictionaries here  -->
                <ResourceDictionary Source="ms-appx:///DevWinUI.Controls/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="ThemeColor">#FFFFFF</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="ThemeColor">#000000</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!--  Official Colors  -->

            <Color x:Key="SystemAccentColor">#00A495</Color>

            <Color x:Key="SystemAccentColorLight1">#00A495</Color>
            <Color x:Key="SystemAccentColorLight2">#09a87e</Color>
            <Color x:Key="SystemAccentColorLight3">#13AD65</Color>

            <Color x:Key="SystemAccentColorDark1">#00A495</Color>
            <Color x:Key="SystemAccentColorDark2">#09a87e</Color>
            <Color x:Key="SystemAccentColorDark3">#13AD65</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
